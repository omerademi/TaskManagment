@model CommentViewModel


@{
    ViewData["Title"] = "SearchComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Search</h1>

<form asp-controller="Comment" asp-action="Search" method="post">
    <div class="form-group">
        <div class="select">
            <select asp-for="TypeCommentId">
                <option selected disabled>Comment Type</option>
                <option value="1">Hint</option>
                <option value="2">Question</option>
                <option value="3">Important</option>
            </select>
        </div>

            <div class="form-group">
                <label asp-for="Text" class="control-label">Comment Text</label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

        <button type="submit" class="btn btn-primary">Search Comment</button>
    </div>

</form>