@using Microsoft.AspNetCore.Identity
@inject SignInManager<TaskManagement.Entities.User> SignInManager
@inject UserManager<TaskManagement.Entities.User> UserManager

<link rel="stylesheet" href="~/css/button.css" />

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-danger" asp-area="Identity" asp-page="/Account/Login">Please Login</a>
        </li>
    }
</ul>
